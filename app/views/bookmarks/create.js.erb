$('.bookmarks_buttons').html("<%= j(render 'bookmarks/bookmark_show', day_record: @day_record) %>");
$('#index_bookmark_btn_<%= @day_record.id %>').html("<%= j(render 'bookmarks/bookmark_index', day_record: @day_record) %>");
$('#bookmark_only_btn_<%= @bookmark.day_record.id %>').html("<%= j(render 'bookmarks/bookmark_only', bookmark: @bookmark) %>");

<!--　.　はクラス指定、#　はidを指定-->
<!--each文の中で部分テンプレートを使用しているのでclassを指定すると-->
<!--全てのブックマークがeachでブックマークされていまう-->
<!--なので、classではなくidを指定してあげる。-->
<!--id指定して、jsファイルでそのidを呼び出す時は、-->
<!--each文内のday_recordが@day_recordではないので@day_record.idとする。-->