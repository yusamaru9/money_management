<div class="container mt-5">
  <div class="w-50 border border-success mx-auto">
    <div class="row mt-3 justify-content-center">
      <h4>新規登録</h4>
    </div>
    <div class="row justify-content-center text-center">
        
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field pt-1 pb-3">
            <%= f.label :name %><br>
            <%= f.text_field :name, size: '34' %>
          </div>
          <div class="field pt-1 pb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: '34' %>
          </div>
          <div class="field pt-1 pb-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>( <%= @minimum_password_length %> 文字以上 )</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", size: '34' %>
          </div>
          <div class="field pt-1 pb-3">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", size: '34' %>
          </div>
          <div class="actions">
            <%= f.submit "登録する", class: "btn btn-outline-success" %>
          </div>
      <% end %>
    </div>
    <div class="row py-3 justify-content-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>