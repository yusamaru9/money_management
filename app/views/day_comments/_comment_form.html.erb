<%= form_with model: [day_record, day_comment], local: false do |f| %>
  <div class="row justify-content-center">
    <div class="col-6 text-right">
      <%= f.text_area :comment, size: "38x3", placeholder: "コメント欄" %>
    </div>
    <div class="col-3 pb-2 pl-0 d-flex align-items-end">
      <%= f.submit "送信する", class: "btn btn-primary btn-sm" %>
    </div>
  </div>
<% end %>