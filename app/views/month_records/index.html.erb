<div class="container my-4">
  <div class="row justify-content-center">
    <%= flash[:fraud] %>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <h4>各月収支一覧</h4>
    </div>
  </div>
</div>
  <div class="flex">
    <div class="month-box">
      <div class="month-title in-box month-oblique-line"><div></div><p class="title-item-month m-0">項目</p><p class="title-day-month m-0">年月</p></div>
      <!--&nbsp;は半角スペースの特殊文字-->
      <div class="month-title">前月からの<br>&nbsp;くりこし</div>
      <div class="month-title in-box">収入</div>
      <div class="month-title in-box">収入合計</div>
      <div class="month-title in-box">水道</div>
      <div class="month-title in-box">ガス</div>
      <div class="month-title in-box">電気</div>
      <div class="month-title in-box">電話</div>
      <div class="month-title in-box">貯金</div>
      <div class="month-title in-box">保険</div>
      <!--&emsp;は全角スペースの特殊文字-->
      <div class="month-title">クレジット<br>&emsp;カード</div>
      <div class="month-title in-box">その他</div>
      <div class="month-title in-box">支出合計</div>
      <div class="month-title in-box">使えるお金</div>
    </div>
    <% @month_records.each do |month_record| %>
      <div class="month-box">
        <div class="month-index"><%= link_to month_record.year_month.strftime("%Y/%m"), month_record_path(month_record) %></div>
        <div class="month-index"><%= (month_record.brought_forward).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.income).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.income_total).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.water_fare).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.gas_fare).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.electrical_fare).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.telephone_fare).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.deposit).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.insurance).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.credit_card).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.month_other).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.expenditure_total).to_s(:delimited) %></div>
        <div class="month-index"><%= (month_record.freedom_money).to_s(:delimited) %></div>
      </div>  
    <% end %>
  </div>
<div class="container mt-4 mb-5">
  <div class="row justify-content-center">
    <%= paginate @month_records %>
  </div>
</div>