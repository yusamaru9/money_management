<h3>月：記録</h3>
  <h5>内容</h5>
  
      <%= form_with model: @month_record, url: month_records_path, method: :post do |f| %>
      
        <h6>今月の収入</h6>
          <%= f.date_select :year_month, {:discard_day => true, :use_month_numbers => true } %> <!--オプション：日の選択ボックスを非表示、月を数字で表示-->
          
          <label>前月からのくりこし</label>
            <%= f.number_field :brought_forward %>円
          <label>収入</label>
            <%= f.number_field :income %>円
            
        <h6>今月の決まっている支出</h6>
        
          <label>水道</label>
            <%= f.number_field :water_fare %>円
          <label>ガス</label>
            <%= f.number_field :gas_fare %>円
          <label>電気</label>
            <%= f.number_field :electrical_fare %>円
          <label>電話</label>
            <%= f.number_field :telephone_fare %>円
          <label>貯金</label>
            <%= f.number_field :deposit %>円
          <label>保険</label>
            <%= f.number_field :insurance %>円
          <label>クレジットカード</label>
            <%= f.number_field :credit_card %>円
          <label>その他</label>
            <%= f.number_field :month_other %>円
            
          <%= f.submit "記録する" %>
      <% end %>